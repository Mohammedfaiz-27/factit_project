MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=dbname

# Google Gemini API Configuration (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Perplexity API Configuration (Optional but recommended)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Backend Server Configuration
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# Frontend Configuration (for CORS)
# Local: http://localhost:3000
# Production: https://your-frontend-url.vercel.app
FRONTEND_URL=http://localhost:3000

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.0-flash

# JWT Authentication Configuration
# Generate a secure secret key: openssl rand -hex 32
# Or leave blank and one will be auto-generated (not recommended for production)
JWT_SECRET_KEY=your_secure_random_secret_key_here
JWT_ALGORITHM=HS256 
